<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
  <TextView
      android:layout_weight="0.5"
      android:layout_width="0dp"
      android:layout_height="match_parent" />
  <LinearLayout
      android:id="@+id/ll_reset_pwd"
      android:layout_width="0dp"
      android:layout_weight="8"
      android:layout_height="30dp"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="7dp"
      android:layout_marginRight="0dp"

      android:background="@drawable/register_input"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="20dp"
        android:src="@mipmap/sousuo"
        android:layout_width="15dp"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1px"
        android:layout_height="24dp"
        android:layout_marginLeft="14dp"
        android:background="@color/account_input_bg_color"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/et_reset_pwd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/banyuan"
        android:hint="@string/zhenti1"
        android:inputType="text"
        android:maxLines="1"
        android:minLines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textCursorDrawable="@null"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/iv_reset_pwd_del"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@mipmap/ic_clear"
        tools:ignore="RtlHardcoded" />
  </LinearLayout>
  <ImageView
      android:layout_marginTop="4dp"
      android:src="@mipmap/shoucang"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="20dp" />
  <ImageView
      android:layout_gravity="center"
      android:src="@mipmap/note"
      android:layout_marginTop="4dp"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="20dp" />
</LinearLayout>
<ExpandableListView
    android:id="@+id/expand1"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</ExpandableListView>

</LinearLayout>