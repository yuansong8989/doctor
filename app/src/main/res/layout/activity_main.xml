<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.Acitivity.MainActivity">

    <ImageView
        android:layout_above="@+id/uuu"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:id="@+id/uuu"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="精准题型"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="#0D308A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:text="海量题型，官方解答"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_width="350dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp">
    <TextView
        android:text="成都阿里信息科学技术有限公司"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Chengdu Alibaba  information science and Technology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

</RelativeLayout>